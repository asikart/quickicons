	<description></description>

	<scriptfile>install.php</scriptfile>

	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.sql</file>
		</sql>
	</install>

	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.sql</file>
		</sql>
	</uninstall>

	<administration>
		<menu>COM_AKQUICKICONS</menu>

		<files folder="admin">
			<folder>asset</folder>
			<folder>controller</folder>
			<folder>etc</folder>
			<folder>helper</folder>
			<folder>helpers</folder>
			<folder>images</folder>
			<folder>language</folder>
			<folder>model</folder>
			<folder>sql</folder>
			<folder>src</folder>
			<folder>table</folder>
			<folder>view</folder>
			<filename>access.xml</filename>
			<filename>component.php</filename>
			<filename>composer.json</filename>
			<filename>config.xml</filename>
			<filename>akquickicons.php</filename>
			<filename>index.html</filename>
			<filename>install.php</filename>
		</files>
	</administration>

	<modules>
		<module>mod_akquickicons</module>
	</modules>

	<updateservers>
		<server type="extension" priority="1" name="Asikart Quickicons Component">https://raw.githubusercontent.com/asikart/quickicons/staging/update.xml</server>
	</updateservers>

</extension>

